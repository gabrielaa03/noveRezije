<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.gabrielaangebrandt.mojerezije.registration.Registration">

    <!--SCROLLVIEW-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!--IME-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:hint="@string/name">

                <EditText
                    android:id="@+id/et_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:inputType="textPersonName"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:textSize="20sp" />

            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_below="@+id/text_input_layout_name"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/hint_name"
                android:textSize="10sp" />

            <!--ADRESA KUĆANSTVA-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_addrKucanstva"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_layout_name"
                android:layout_marginTop="16dp"
                android:hint="@string/addrKucanstva">

                <EditText
                    android:id="@+id/et_addr"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/et_username"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:inputType="textPostalAddress"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_below="@+id/text_input_layout_addrKucanstva"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/hint_addr"
                android:textSize="10sp" />

            <!--EMAIL-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_email"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_layout_addrKucanstva"
                android:layout_marginTop="16dp"
                android:hint="@string/email">

                <EditText
                    android:id="@+id/et_email"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/et_username"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:inputType="textEmailAddress"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_below="@+id/text_input_layout_email"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/hint_email"
                android:textSize="10sp" />

            <!--  KORISNIČKO IME-->

            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_layout_email"
                android:layout_marginTop="16dp"
                android:hint="@string/username">

                <EditText
                    android:id="@+id/et_username"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/et_name"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="25dp"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="14dp"
                android:layout_below="@+id/text_input_layout_username"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:text="@string/hint_Username"
                android:textSize="10sp" />

            <!--LOZINKA1-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_layout_username"
                android:layout_marginTop="16dp"
                android:hint="@string/password">

                <EditText
                    android:id="@+id/et_password1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/et_username"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="25dp"
                    android:inputType="textPassword"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <!--LOZINKA2-->
            <android.support.design.widget.TextInputLayout
                android:id="@+id/text_input_layout_password2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_layout_password"
                android:layout_marginTop="16dp"
                android:hint="@string/repeatPassword">

                <EditText
                    android:id="@+id/et_password2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/et_username"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:inputType="textPassword"
                    android:paddingBottom="8dp"
                    android:paddingTop="16dp"
                    android:textSize="20sp" />
            </android.support.design.widget.TextInputLayout>

            <!--PLACA-->
            <EditText
                android:id="@+id/datumPodsjetnika"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/text_input_layout_password2"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginTop="16dp"
                android:hint="@string/datumPodsjetnika"
                android:inputType="datetime"
                android:textSize="20sp" />

            <!--GUMB ZA REGISTRACIJU-->

            <Button
                android:id="@+id/btn_register_user"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_alignParentBottom="true"
                android:layout_below="@+id/datumPodsjetnika"
                android:layout_marginTop="25dp"
                android:background="@color/colorAccent"
                android:text="@string/register"
                android:textColor="@color/white"
                android:textSize="25dp" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
